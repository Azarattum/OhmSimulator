<!DOCTYPE html>
- const data = htmlWebpackPlugin.options.data
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        meta(name="apple-mobile-web-app-capable" content="yes")
        meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent" id="bar")
        title Ohm Simulator
        style
            include index.css
    body
        .debug
            p(onclick="Tabs.change('greeting')") Main
            p(onclick="Tabs.change('help')") Help
            p(onclick="Tabs.change('example')") Example
            p(onclick="Tabs.change('table')") Table 1
            p(onclick="Tabs.change('complex')") Table 2
            p(onclick="Tabs.change('machine')") Machine
            p(onclick="Tabs.change('success')") Success
        .hints(controller="hints")
            .hint(iterate="data.hints")
                .text Загрузка...
                .close
        .page(controller="tabs")
            div(tab="greeting" view="greeting")
            div(tab="example" view="table"
                controller="tablectrl" data-example="true"
                data-title="Пример заполнения таблицы для однопредельных приборов"
            )
            div(tab="table" view="table" controller="tablectrl"
                data-title="Характеристики однопредельных приборов"
            )
            div(tab="complex" view="table"
                controller="table2ctrl" data-complex="true"
                data-title="Характеристики многопредельных приборов"    
            )
            div(tab="help" view="help")
            div(tab="help2" view="help2")
            div(tab="help3" view="help3")
            div(tab="help4" view="help4")
            div(tab="machine" view="machine")
            div(tab="success" view="success")
        div(view="footer")
